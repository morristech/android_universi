<manifest package="universum.studios.android.support.samples.universi"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/samples_ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/Samples.Theme">

		<activity
			android:name=".ui.MainActivity"
			android:theme="@style/Samples.Theme.Navigation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<meta-data android:name="universum.studios.android.support.samples.SamplesMetaData.NAVIGATION_MENU" android:resource="@menu/navigation"/>
			<meta-data android:name="universum.studios.android.support.samples.SamplesMetaData.INTRO_TEXT" android:resource="@string/app_intro"/>
		</activity>
	</application>
</manifest>